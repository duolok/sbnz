package rules;

rule "Apply Easy Difficulty"
    salience 90
    when
        $context : GameContext(difficulty == "easy")
        $enemy : Enemy()
    then
        $enemy.applyDifficultyModifier(0.6, 0.6);
        System.out.println("Applied easy difficulty to " + $enemy.getName());
end

