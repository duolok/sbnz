package rules;

rule "Adjust for Low Level Player"
    salience 85
    when
        $context : GameContext($player : player, player.level <= 10)
        $enemy : Enemy()
    then
        $enemy.adjustForPlayerLevel($player.getLevel());
        System.out.println("Adjusted " + $enemy.getName() + " for low level player");
end

rule "Adjust for Mid Level Player"
    salience 85
    when
        $context : GameContext($player : player, player.level > 10, player.level <= 30)
        $enemy : Enemy()
    then
        System.out.println("No adjustment needed for mid-level player");
end

rule "Adjust for High Level Player"
    salience 85
    when
        $context : GameContext($player : player, player.level > 30)
        $enemy : Enemy()
    then
        $enemy.adjustForPlayerLevel($player.getLevel());
        System.out.println("Adjusted " + $enemy.getName() + " for high level player");
end